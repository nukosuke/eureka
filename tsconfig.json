{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "app"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "./src/server/api/index.ts",
        "./src/server/app.ts",
        "./src/server/index.ts",
        "./typings/index.d.ts"
    ]
}
